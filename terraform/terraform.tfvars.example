# AWS Configuration
aws_region       = "ap-southeast-1"
eks_cluster_name = "my-eks-cluster"  # Change to your EKS cluster name

# S3 Configuration
s3_source_bucket   = "my-source-bucket"      # Source bucket name
s3_source_prefix   = "input-data/"           # Optional prefix
s3_output_bucket   = "my-output-bucket"      # Output bucket name
s3_output_prefix   = "compressed-output/"    # Optional prefix

# AWS Credentials for the application
# NOTE: These credentials should have S3 permissions for the source and output buckets
# Consider using AWS IAM role instead for better security in production
app_aws_access_key_id     = "AKIA..."
app_aws_secret_access_key = "..."

# Helm/Kubernetes Configuration
release_name        = "s3-sync-compress"
kubernetes_namespace = "default"
create_namespace    = false

# Deployment Configuration
replica_count          = 3
pod_anti_affinity_type = "required"  # Use "preferred" for single-node clusters
service_type           = "ClusterIP" # Use "LoadBalancer" for external access

# Resource Configuration
cpu_request    = "250m"
cpu_limit      = "500m"
memory_request = "256Mi"
memory_limit   = "512Mi"

# Tags
tags = {
  Project     = "s3-sync-compress"
  Environment = "production"
  Team        = "data-engineering"
}
